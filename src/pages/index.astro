---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there</div>
    <div class="text-5xl font-bold">I'm John Dorion</div>
    <div class="text-3xl py-3 font-bold">Consulting Engineer at Silex Data Solutions</div>
    <div class="py-2">
      <span class="text-lg">
        I work at the intersection of emerging technology and enterprise enablement, translating complex infrastructure, cloud, and security solutions into strategic outcomes. With a background in cybersecurity operations and hands-on Linux expertise from running my homelab, I bridge cutting-edge tech and real-world value.
      </span>
    </div>
    <div class="mt-8">
      <a class="btn btn-primary" href="https://linkedin.com/in/johndorion" target="_blank">Let's connect!</a>
      <a href="/cv" class="btn btn-outline ml-5">View my CV</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Highlights</div>
  </div>

  <HorizontalCard
    title="Tech 901 CTF - 1st Place Winner (2024 & 2025)"
    img="/post_img.webp"
    desc="Two-time champion of Tech 901's annual Capture The Flag cybersecurity competition, demonstrating practical offensive and defensive security skills."
    url="/cv"
    badge="CTF"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="AWS Certified Cloud Practitioner"
    img="/post_img.webp"
    desc="Building cloud expertise with AWS certifications. Currently pursuing AWS Solutions Architect Associate to deepen architectural knowledge."
    url="https://www.credly.com/users/john-dorion.c2a33719/badges"
    badge="AWS"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Employee of the Quarter - Silex Data Solutions"
    img="/post_img.webp"
    desc="Recognized for spearheading AWS practice development and rapidly acquiring 28+ professional certifications in first year of employment."
    url="/cv"
    badge="AWARD"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.id)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
